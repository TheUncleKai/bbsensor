ESP8266_ROOT = $(ESP8266_PATH)/tools/$(ESP8266_GCC_PREFIX)-gcc/$(ESP8266_GCC_VERSION)
ESP8266_BIN  = $(ESP8266_ROOT)/bin
ESP8266_SDK  = $(ESP8266_PATH)/hardware/esp8266/$(ESP8266_VERSION)/tools/sdk
ESP8266_CORES = $(ESP8266_PATH)/hardware/esp8266/$(ESP8266_VERSION)/cores/esp8266
ESP8266_VARIANTS = $(ESP8266_PATH)/hardware/esp8266/$(ESP8266_VERSION)/variants/nodemcu

ESP8266_INCLUDE_SDK = -I$(ESP8266_SDK)/include -I$(ESP8266_SDK)/lwip2/include -I$(ESP8266_SDK)/libc/xtensa-lx106-elf/include
ESP8266_INCLUDE_CORES = -I$(ESP8266_CORES)
ESP8266_INCLUDE_VARIANTS = -I$(ESP8266_VARIANTS)

ESP8266_LIB = -L$(ESP8266_SDK)/lib -L$(ESP8266_SDK)/lib/NONOSDK221 -L$(ESP8266_SDK)/ld -L$(ESP8266_SDK)/libc/xtensa-lx106-elf/lib
ESP8266_SIGNING = $(ESP8266_PATH)/hardware/esp8266/2.5.2/tools/signing.py
ESP8266_INCLUDES = $(ESP8266_INCLUDE_CORES) $(ESP8266_INCLUDE_CORES) $(ESP8266_INCLUDE_VARIANTS)

GCC = $(ESP8266_BIN)/$(COMPILER_PREFIX)-gcc.exe
CXX = $(ESP8266_BIN)/$(COMPILER_PREFIX)-g++.exe
AR = $(ESP8266_BIN)/$(COMPILER_PREFIX)-gcc-ar.exe
RANLIB = $(ESP8266_BIN)/$(COMPILER_PREFIX)-gcc-ranlib.exe
OBJCOPY = $(ESP8266_BIN)/$(COMPILER_PREFIX)-objcopy.exe
SIZE = $(ESP8266_BIN)/$(COMPILER_PREFIX)-size.exe
